<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.helloandroid.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:src="@drawable/udacitypicture" />

    <TextView
        android:layout_width="wrap_content"
        android:paddingBottom="10dp"
        android:id="@+id/number"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="(650) 555-555"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/number"
        android:layout_centerHorizontal="true"
        android:text="Mountain View, CA 94043"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/address2"
        android:layout_centerHorizontal="true"
        android:text="2465 Latham Street"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/address1"
        android:layout_centerHorizontal="true"
        android:text="Udacity"
        android:textSize="24sp"/>

</RelativeLayout>
